{% extends "ArisMainBundle::layout.html.twig" %}


          {% block title %} Login
    {% endblock %}
{% block content %}
{% if error %}
<div class="alert alert-danger">{{ error.message|trans }}</div>
{% endif %}
<div class="container">
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h2 class="text-center">Administración </h2>
                </div>
                <div class="modal-body">
                    <form class="form-signin" action="{{ path('login_check') }}" method="post">
                        <h2 class="form-signin-heading">Iniciar sesión</h2>
                        <label for="username">Usuario:</label>
                        <input   class="form-control input-lg" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="usuario" data-trigger="change" required="true" />

                        <label for="password">Contraseña:</label>
                        <input  class="form-control input-lg" type="password" id="password" name="_password" placeholder="Password" data-trigger="change" required="true" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
                        <input type="hidden" name="_target_path" value="/admin" />    
                        <button class="btn btn-primary btn-lg btn-block" type="submit">login</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="col-md-12">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    </div>	
                </div>
            </div>
        </div>
    </div>
     {% if name is defined%}
    <div class="alert-info fade in">
        <strong>{{name}}</strong>
    </div>
    {%endif%}
    {% endblock %}
